<% include _layouts/header %>

<% include _layouts/categories %>

<div class="row product_content">
    <h3><%= p.title %></h3>
    
    <div class="col-xs-12 col-md-6">
        <img class="spi" src="/product_images/<%= p.id %>/<%= p.image %>" alt="">
    </div>
    <div class="col-xs-12 col-md-6">
        <div class="product_detail_content">
            <h6 class="product-h6"><%= p.category %></h6>
            <span class="product-span"><%= p.desc %></span>
            <h5 class="product-h5">$<%= parseFloat(p.price).toFixed(2) %></h5>
            <% if (loggedIn) { %>
            <button class="white"><a href="/cart/add/<%= p.slug %>">Añadir al Carrito</a></button>
            <% } else {%>
            <p>Debes iniciar sesión para comprar artículos.</p>
            <% } %>
        </div>
    </div>
    
    <div class="col-xs-12">
        <ul class="gallery">
            <% galleryImages.forEach(function(image){ %>
            <% if (image != "thumbs") { %>
            <li>
                <a data-fancybox="gallery" href="/product_images/<%= p.id %>/gallery/<%= image %>">
                    <img src="/product_images/<%= p.id %>/gallery/thumbs/<%= image %>" alt="">
                </a>
            </li>
            <% } %>
            <% }); %>
        </ul>
    </div>
</div>

<% include _layouts/footer %>