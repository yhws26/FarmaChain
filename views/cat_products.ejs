<% include _layouts/header %>

<% include _layouts/categories %>

<div class="row products">
    <section id="product1" class="section-p1">
        <h3>Resultados de b√∫squeda</h3>
        <div class="pro-container">
            <% products.forEach(function(p){ %>
                <div class="pro">
                    <a class="des" href="/products/<%= p.category %>/<%= p.slug %>">
                        <img src="/product_images/<%= p.id %>/<%= p.image %>" alt="">
                        <span><%= p.category %></span>
                        <h5><%= p.title %></h5>
                        <div class="star">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star" style="color: gainsboro;"></i>
                        </div>
                        <h4>$<%= parseFloat(p.price).toFixed(2) %></h4>
                    </a>
                    <a href="/cart/checkout"><i class="fal fa-shopping-cart cart"></i></a>
                </div>
                <% }); %>
        </div>
    </section>
    
</div>

<% include _layouts/footer %>